---
const navItems = [
  { href: '/', label: 'Accueil' },
  { href: '/services', label: 'Services' },
  { href: '/notre-equipe', label: 'Notre Ã‰quipe' },
  { href: '/contact', label: 'Contact' }
];
---

<header 
  class="fixed top-0 left-0 right-0 z-50 transition-all duration-300"
  style="background: linear-gradient(180deg, rgba(56, 64, 74, 0.75) 0%, rgba(56, 64, 74, 0) 100%);"
>
  <div class="container mx-auto px-4 md:px-16 py-8" x-data="{ mobileMenuOpen: false }">
    <div class="flex justify-between items-center">
      <!-- Logo -->
      <div class="header-title">
        <a href="/" class="block">
          <img 
            src="/assets/mdmy_white_slim.png"
            alt="MDMY Group" 
            class="h-20 md:h-24 w-auto"
            loading="eager"
            fetchpriority="high"
          />
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <nav class="hidden md:flex space-x-8">
        {navItems.map(item => (
          <a 
            href={item.href}
            class="text-white text-sm font-medium font-manrope hover:opacity-80 transition-opacity"
            aria-current={Astro.url.pathname === item.href ? 'page' : undefined}
          >
            {item.label}
          </a>
        ))}
      </nav>
      
      <!-- Mobile Menu Button -->
      <button 
        @click="mobileMenuOpen = !mobileMenuOpen"
        class="md:hidden text-white focus:outline-none"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M4 6h16M4 12h16M4 18h16"
          />
        </svg>
      </button>
    </div>
    
    <!-- Mobile Menu -->
    <div 
      x-show="mobileMenuOpen"
      x-transition:enter="transition ease-out duration-200"
      x-transition:enter-start="opacity-0 transform scale-95"
      x-transition:enter-end="opacity-100 transform scale-100"
      x-transition:leave="transition ease-in duration-150"
      x-transition:leave-start="opacity-100 transform scale-100"
      x-transition:leave-end="opacity-0 transform scale-95"
      class="md:hidden mt-4 bg-white/10 backdrop-blur-md rounded-lg p-4"
      style="display: none;"
    >
      <nav class="flex flex-col space-y-3">
        {navItems.map(item => (
          <a 
            href={item.href}
            class="text-white text-base font-medium font-manrope hover:bg-white/10 px-3 py-2 rounded transition"
          >
            {item.label}
          </a>
        ))}
      </nav>
    </div>
  </div>
</header>
